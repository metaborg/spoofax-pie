let 
  function fact(n : int) : int = 
    let
      var c := n < 1
     in if c then 
          1 
        else
          let 
            var l : int := n
            var r : int := 1  
           in let         
               var a : int := l - r
               var b : int := fact(a)                        
              in let  
                var c : int := n * b 
               in c
              end 
          end
    end  
    var r := fact(10)
 in r
end
