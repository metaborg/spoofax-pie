module pp

imports
  libstratego-lib

imports

  libstratego-gpp
  libspoofax/sdf/pp
  libspoofax/editor/refactoring/-
  pp/llvm-parenthesize
  pp/llvm-pp

rules

  editor-format:
    (node, _, ast, path, project-path) -> (filename, result)
    with
      ext      := <get-extension> path
    ; filename := <guarantee-extension(|$[pp.[ext]])> path
    ; result   := <pp-debug> node

rules
  
  pp-llvm-string =
    parenthesize-llvm
    ; prettyprint-llvm-start-symbols
    ; !V([], <id>)
    ; box2text-string(|120)
      
  pp-partial-llvm-string =
    parenthesize-llvm
    ; prettyprint-llvm
    ; !V([], <id>)
    ; box2text-string(|120)
    
  pp-partial-llvm-string(|sort) =
    parenthesize-llvm
    ; prettyprint-llvm(|sort)
    ; !V([], <id>)
    ; box2text-string(|120)  
      
  pp-debug :
    ast -> result
    with
       result := <pp-llvm-string> ast
    <+ <bottomup(try(not(is-string); not(is-list); not(pp-llvm-string); debug(!"cannot pp ")))> ast
    ;  result := ""

rules
  
  construct-textual-change = construct-textual-change(pp-partial-llvm-string, parenthesize, override-reconstruction, resugar)
