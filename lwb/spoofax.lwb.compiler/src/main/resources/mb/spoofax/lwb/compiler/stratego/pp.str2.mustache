module pp

imports

  strategolib
  gpp
  libspoofax/editor/refactoring/-
  libspoofax/sdf/pp
  pp/{{name}}-parenthesize
  pp/{{sdf3MainModule}}-pp

rules

  pp-{{name}}-string =
    parenthesize-{{name}}
    ; prettyprint-{{ppName}}-start-symbols
    ; !V([], <id>)
    ; box2text-string(|120)

  pp-partial-{{name}}-string =
    parenthesize-{{name}}
    ; prettyprint-{{ppName}}
    ; !V([], <id>)
    ; box2text-string(|120)

  pp-partial-{{name}}-string(|sort) =
    parenthesize-{{name}}
    ; prettyprint-{{ppName}}(|sort)
    ; !V([], <id>)
    ; box2text-string(|120)

  pp-debug-{{name}}-string :
    ast -> result
    with
       result := <pp-{{name}}-string> ast
    <+ <bottomup(try(not(is-string); not(is-list); not(pp-{{name}}-string); debug(!"cannot pretty-print term to {{name}}")))> ast
    ;  result := ""

  construct-textual-change-{{name}} =
    construct-textual-change(pp-partial-{{name}}-string, parenthesize-{{name}}, id, id)
