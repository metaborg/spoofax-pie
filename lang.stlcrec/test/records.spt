test with simple record [[
  with { x = 1 } do
  (x : num)
]] analysis succeeds

test with extended record [[
  with ({ x = 1 } extends { y = 4 }) do
  x + y
]] analysis succeeds

test with within let [[
  let x = {} in
  with { x = 2 } do
  (x : num)
]] analysis succeeds

test let within with [[
  with { x = 2 } do
  let x = {} in
  (x : {})
]] analysis succeeds
